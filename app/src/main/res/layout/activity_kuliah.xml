<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@drawable/cover">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".MainActivity">


        <TextView
            android:id="@+id/tvbukuKuliah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="160dp"
            android:text="Buku Kuliah "
            android:textColor="#A4D6D2"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardAlin"
            android:background="@color/black"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="337dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/igalin"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/alin"/>
                <TextView
                    android:id="@+id/tvalin"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="15dp"
                    android:paddingLeft="160dp"
                    android:text="Aljabar Linear"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDescalin"
                    android:layout_width="430dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="4"
                    android:paddingLeft="145dp"
                    android:text="Dasar dasar aljabar linear - edisi 7 jilid 1 - howard anton, ukuran 23,5x18 cm, tebal halaman 380, berat 560 grm"
                    android:textColor="#A3B5C0" />
                <TextView
                    android:id="@+id/tvharga11"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rp. 200.000"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMatdis"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="338dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/igmatdis"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/matdis"/>

                <TextView
                    android:id="@+id/tvmatdis"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="15dp"
                    android:paddingLeft="145dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Matematika Diskrit"
                    android:textStyle="bold"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDescmatdis"
                    android:layout_width="430dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="4"
                    android:paddingLeft="145dp"
                    android:text="Ditulis oleh RajaGrafindo Persada, dengan jumlah halaman 104 halaman, diterbitkan pada tanggal 17 Maret 2019"
                    android:textColor="#A3B5C0" />
                <TextView
                    android:id="@+id/tvharga12"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="45dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rp. 140.000"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTermo"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="339dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/igtermo"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/termo"/>
                <TextView
                    android:id="@+id/tvTermo"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="15dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="Thermodynamics"
                    android:textStyle="bold"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDesctermo"
                    android:layout_width="430dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="4"
                    android:paddingLeft="145dp"
                    android:text="J.M. Smith, Hendrick Van Ness, Michael Abbott, Mark Swihart,Eighth edition. | Dubuque : McGraw-Hill Education, 2017, dengan halaman 769 halaman"
                    android:textColor="#A3B5C0" />
                <TextView
                    android:id="@+id/tvharga13"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="45dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rp. 300.000"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProbstat"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="335dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/igprobstat"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/probstat"/>
                <TextView
                    android:id="@+id/tvProbstat"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="1dp"
                    android:paddingLeft="145dp"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:text="Probabilitas dan Statistika Dasar"
                    android:textStyle="bold"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDescprobstat"
                    android:layout_width="430dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="4"
                    android:paddingLeft="145dp"
                    android:text="Ditulis oleh Dr. Auditya Purwandini Sutarto, S.T., M.Si, diterbitkan di Pustaka Baru Press, dengan jumlah halaman 320 halaman, dan diterbitkan pada tanggal 29 September 2019."
                    android:textColor="#A3B5C0" />
                <TextView
                    android:id="@+id/tvharga14"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rp. 110.000"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTRK"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="335dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/igTRK"
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:src="@drawable/ece"/>

                <TextView
                    android:id="@+id/tvTRK"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="1dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:text="Elements of Chemical Reaction Engineering"
                    android:textStyle="bold"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvDesctrk"
                    android:layout_width="430dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="-1dp"
                    android:layout_marginStart="10dp"
                    android:maxLines="4"
                    android:paddingLeft="145dp"
                    android:text="Ditulis oleh H. Scott Fogler, diterbitkan di prentice hall, edisi ke-5, dengan bahasa inggris, diterbitkan pada tahun 206, dengan berjumlah 993 halaman."
                    android:textColor="#A3B5C0" />
                <TextView
                    android:id="@+id/tvharga15"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="45dp"
                    android:paddingLeft="145dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rp. 500.000"
                    android:textColor="#A3B5C0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>